\mode<presentation>

% Colors
\definecolor{dfvblue}{HTML}{094CA0}
\definecolor{dfvbluealt}{HTML}{042E63}
%\definecolor{dfvgrey}{RGB}{204,204,204}
\definecolor{dfvgrey}{HTML}{3E78C3}

\definecolor{dfvlighter}{HTML}{3E78C3}
\definecolor{dfvlight}{HTML}{1661C1}
\definecolor{dfvbase}{HTML}{094CA0}
\definecolor{dfvdark}{HTML}{063C81}
\definecolor{dfvdarker}{HTML}{042E63}


% Palette
\setbeamercolor{palette primary}{fg=dfvbluealt}
\setbeamercolor{palette secondary}{fg=dfvblue}
\setbeamercolor{palette tertiary}{fg=dfvgrey}
\setbeamercolor{palette quaternary}{fg=red}

% Titlepage
\setbeamercolor{title page header}{fg=black}
\setbeamercolor{author}{fg=black}
\setbeamercolor{title}{fg=black}
\setbeamercolor{date}{fg=black}

% TOC
\setbeamercolor{section in toc}{parent=palette primary}
\setbeamercolor{subsection in toc}{parent=palette secondary}

% Header
\setbeamercolor{frametitle}{bg=dfvbluealt,fg=white}
\setbeamercolor{logo}{bg=white}
\setbeamercolor{author in head/foot}{bg=dfvblue,fg=white}
\setbeamercolor{title in head/foot}{bg=dfvbluealt,fg=white}

% Blocks
\setbeamercolor{block title}{bg=dfvbluealt,fg=white}
\setbeamercolor{block body}{bg=dfvgrey,fg=black}

% Lists
\setbeamercolor{itemize item}{parent=palette primary}
\setbeamercolor{itemize subitem}{parent=palette secondary}
\setbeamercolor{enumerate item}{parent=palette primary}
\setbeamercolor{enumerate subitem}{parent=palette secondary}
\setbeamercolor{item}{parent=palette primary}

\mode<all>